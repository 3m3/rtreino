%div#action-nav
  %ul
    %li
      = link_to 'New Category', new_category_path

%div#main-content
  %table
    %thead.header
      %tr
        %th.category_id= 'Category'
        %th.actions= 'Actions'
    %tbody.items.categories
      - @categories.each do |category|
        = render 'item', :category => category

  = will_paginate(@categories)
