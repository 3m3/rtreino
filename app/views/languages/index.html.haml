%div#action-nav
  %ul
    %li
      = link_to 'New Language', new_language_path

%div#main-content
  %table
    %thead.header
      %tr
        %th.name= 'Abbreviation'
        %th.name= 'Name'
        %th.actions= 'Actions'
    %tbody.items.languages
      - @languages.each do |language|
        = render 'item', :language => language

  = will_paginate(@languages)
